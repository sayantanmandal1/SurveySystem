# Environment Configuration for AI Surveillance System

# Application Settings
APP_NAME=AI_Surveillance_System
APP_VERSION=1.0.0
ENVIRONMENT=production

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Model Configuration
DEFAULT_MODEL=yolov8n.pt
CUSTOM_MODEL_PATH=models/custom_anomaly_best.pth
BALANCED_MODEL_PATH=models/balanced_anomaly_model.pkl
SURVEY_MODEL_PATH=exp/best.pth

# Detection Thresholds
YOLO_CONFIDENCE=0.4
YOLO_IOU_THRESHOLD=0.45
LOITERING_THRESHOLD=12
ABANDONMENT_THRESHOLD=8
MOVEMENT_THRESHOLD=0.06

# Data Paths
DATA_DIR=data
ALERTS_FILE=data/alerts.json
MODELS_DIR=models
OUTPUT_DIR=output

# Performance Settings
MAX_UPLOAD_SIZE=200
PROCESSING_FPS=30
MAX_PROCESSING_FRAMES=300

# Security Settings
ENABLE_CORS=false
ENABLE_XSRF_PROTECTION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/surveillance.log